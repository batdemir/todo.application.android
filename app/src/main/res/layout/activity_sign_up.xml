<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/rootSignIn"
        style="@style/style_sign_root"
        tools:context=".UI.Activities.FirstSection.SignInActivity">

        <LinearLayout
            android:id="@+id/linearProps"
            style="@style/style_sign_props">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearInner"
                    style="@style/style_sign_inner">

                    <ImageView
                        style="@style/style_sign_image_view"
                        android:contentDescription="@string/todo"
                        android:padding="32dp"
                        android:src="@drawable/ic_logo_medium" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name">

                        <EditText
                            android:id="@+id/editTextFirstName"
                            style="@style/style_sign_edittext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputSurName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sur_name">

                        <EditText
                            android:id="@+id/editTextSurName"
                            style="@style/style_sign_edittext"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_name">

                        <EditText
                            android:id="@+id/editTextUserName"
                            style="@style/style_sign_edittext"
                            android:inputType="textVisiblePassword" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputUserPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password">

                        <EditText
                            android:id="@+id/editTextUserPassword"
                            style="@style/style_sign_edittext"
                            android:inputType="textPassword" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputConfirmUserPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password">

                        <EditText
                            android:id="@+id/editTextConfirmUserPassword"
                            style="@style/style_sign_edittext"
                            android:inputType="textPassword" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email">

                        <EditText
                            android:id="@+id/editTextEmail"
                            style="@style/style_sign_edittext"
                            android:inputType="textEmailAddress" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSignUp"
                        style="@style/style_sign_button"
                        android:background="@color/secondaryColor"
                        android:text="@string/sign_up" />

                    <TextView
                        android:id="@+id/txtAlreadyHaveAnAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/already_have_an_account_sign_in"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryDarkColor" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>