<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        tools:context=".UI.Activities.SignInActivity"
        android:id="@+id/rootSignIn"
        style="@style/style_sign_root">

        <LinearLayout
            android:id="@+id/linearProps"
            style="@style/style_sign_props">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearInner"
                    style="@style/style_sign_inner">

                    <ImageView
                        android:padding="32dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_logo_medium"
                        style="@style/style_sign_image_view"/>

                    <EditText
                        android:id="@+id/editTextFirstName"
                        android:hint="@string/first_name"
                        android:inputType="text"
                        style="@style/style_sign_edittext" />

                    <EditText
                        android:id="@+id/editTextSurName"
                        android:hint="@string/sur_name"
                        android:inputType="text"
                        style="@style/style_sign_edittext"/>

                    <EditText
                        android:id="@+id/editTextUserName"
                        android:hint="@string/user_name"
                        android:inputType="textVisiblePassword"
                        style="@style/style_sign_edittext"/>

                    <EditText
                        android:id="@+id/editTextUserPassword"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        style="@style/style_sign_edittext"/>

                    <EditText
                        android:id="@+id/editTextConfirmUserPassword"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        style="@style/style_sign_edittext"/>

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        style="@style/style_sign_edittext"/>

                    <Button
                        android:id="@+id/btnSignUp"
                        android:text="@string/sign_up"
                        android:background="@color/blue25"
                        style="@style/style_sign_button"/>

                    <TextView
                        android:id="@+id/txtAlreadyHaveAnAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/already_have_an_account_sign_in"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>