<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/rootSignUp"
        style="@style/style_sign_root"
        tools:context=".UI.Activities.FirstSection.SignUpActivity">

        <LinearLayout
            android:id="@+id/linearProps"
            style="@style/style_sign_props">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearInner"
                    style="@style/style_sign_inner">

                    <ImageView
                        style="@style/style_sign_image_view"
                        android:contentDescription="@string/todo"
                        android:padding="32dp"
                        android:src="@drawable/ic_logo_large" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_name">

                        <EditText
                            android:id="@+id/editTextUserName"
                            style="@style/style_sign_edittext"
                            android:inputType="textVisiblePassword" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputUserPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password">

                        <EditText
                            android:id="@+id/editTextUserPassword"
                            style="@style/style_sign_edittext"
                            android:inputType="textPassword" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/checkBoxRememberMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@string/remember_me"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnLogin"
                        style="@style/style_sign_button"
                        android:background="@color/secondaryColor"
                        android:text="@string/login" />

                    <Button
                        android:id="@+id/btnSignUp"
                        style="@style/style_sign_button"
                        android:background="@color/secondaryDarkColor"
                        android:text="@string/sign_up" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>