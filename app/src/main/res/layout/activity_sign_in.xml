<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        tools:context=".UI.Activities.FirstSection.SignUpActivity"
        android:id="@+id/rootSignUp"
        style="@style/style_sign_root">

        <LinearLayout
            android:id="@+id/linearProps"
            style="@style/style_sign_props">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearInner"
                    style="@style/style_sign_inner">

                    <ImageView
                        android:padding="32dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_logo_large"
                        style="@style/style_sign_image_view"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editTextUserName"
                            android:hint="@string/user_name"
                            android:inputType="textVisiblePassword"
                            style="@style/style_sign_edittext" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editTextUserPassword"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            style="@style/style_sign_edittext"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/checkBoxRememberMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/remember_me"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"/>

                    <Button
                        android:id="@+id/btnLogin"
                        android:text="@string/login"
                        android:background="@color/secondaryColor"
                        style="@style/style_sign_button"/>

                    <Button
                        android:id="@+id/btnSignUp"
                        android:text="@string/sign_up"
                        android:background="@color/secondaryDarkColor"
                        style="@style/style_sign_button"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>