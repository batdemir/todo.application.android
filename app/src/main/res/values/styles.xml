<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--** THEMES **-->

    <style name="theme_actionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:screenOrientation">sensorPortrait</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:spinnerItemStyle">@style/style_spinner_item</item>
        <item name="spinnerDropDownItemStyle">@style/style_spinner_drop_item</item>
    </style>

    <style name="theme_noActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:screenOrientation">sensorPortrait</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:spinnerItemStyle">@style/style_spinner_item</item>
        <item name="spinnerDropDownItemStyle">@style/style_spinner_drop_item</item>
    </style>

    <style name="theme_splash_screen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/img_splash_screen</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <!--** STYLES **-->

    <style name="style_spinner_item">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="style_spinner_drop_item">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="style_events_header_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_sign_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_sign_third_layer</item>
    </style>

    <style name="style_sign_props">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/background_sign_second_layer</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="style_sign_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_sign_first_layer</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="style_sign_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="style_sign_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black75</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">49</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
    </style>

    <style name="style_sign_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="style_other_root" parent="style_sign_root">
        <item name="android:background">@drawable/background_sign_second_layer</item>
    </style>

    <style name="style_other_props" parent="style_sign_props">
        <item name="android:background">@drawable/background_sign_first_layer</item>
    </style>

    <style name="style_other_inner" parent="style_sign_inner">
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_other_image_view" parent="style_sign_image_view">

    </style>

    <style name="style_other_edittext" parent="style_sign_edittext">

    </style>

    <style name="style_other_button" parent="style_sign_button">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="style_recycler_view_item_todo_task_header_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:drawableStart">@drawable/ic_order_down_mini</item>
    </style>

    <style name="style_recycler_view_item_todo_task_child_text_view" parent="style_recycler_view_item_todo_task_header_text_view">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableStart">@null</item>
    </style>

</resources>
